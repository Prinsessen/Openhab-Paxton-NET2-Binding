// InMemory Persistence Configuration
// Used for storing time series data in memory for ENTSO-E spot prices
Strategies {
    everyMinute : "0 * * * * ?"
    everyHour   : "0 0 * * * ?"
   // default = everyChange
}

Items {
    // Persist all members of the Temperature Group on every change
    SpotPrice : strategy = forecast
    // Persist all items (not recommended for InMemory due to RAM usage)
    // * : strategy = everyChange
}