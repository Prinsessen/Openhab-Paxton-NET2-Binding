<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openhab.addons.bundles</groupId>
    <artifactId>org.openhab.addons.reactor.bundles</artifactId>
    <version>5.1.0</version>
  </parent>

  <artifactId>org.openhab.binding.net2</artifactId>
  <packaging>jar</packaging>
  <name>openHAB Add-ons :: Bundles :: Net2 Binding</name>

  <description>This binding provides integration with the Paxton Net2 Access Control system.
    It enables remote door control, real-time status monitoring, and user management through openHAB.
    Features include door control (hold open/close), real-time status via SignalR, user creation/deletion,
    access level management, and automatic discovery of connected doors.</description>

  <developers>
    <developer>
      <id>prinsessen</id>
      <name>Nanna Agesen</name>
      <email>Nanna@agesen.dk</email>
      <url>https://github.com/Prinsessen</url>
      <roles>
        <role>Lead Developer</role>
        <role>Maintainer</role>
      </roles>
      <timezone>Europe/Copenhagen</timezone>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:https://github.com/Prinsessen/Openhab-Paxton-NET2-Binding.git</connection>
    <developerConnection>scm:git:https://github.com/Prinsessen/Openhab-Paxton-NET2-Binding.git</developerConnection>
    <url>https://github.com/Prinsessen/Openhab-Paxton-NET2-Binding</url>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/Prinsessen/Openhab-Paxton-NET2-Binding/issues</url>
  </issueManagement>

  <properties>
    <bnd.importpackage>org.openhab.binding.net2*;version="[$(version;==;$(@)),$(version;+;$(@)))",*</bnd.importpackage>
  </properties>

</project>
