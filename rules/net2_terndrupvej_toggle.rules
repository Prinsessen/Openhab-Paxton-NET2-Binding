rule "Net2 Terndrupvej Toggle Controls Door"
when
    Item Net2_Toggle_Button_Terndrupvej received command or
    Item Net2_Toggle_Terndrupvej changed to ON
then
    logInfo("Net2_Rules", "Toggle received - toggling Door2")

    // Toggle Door2 state
    if (Net2_Door2_Action.state == ON) {
        Net2_Door2_Action.sendCommand(OFF)
        logInfo("Net2_Rules", "Door2 was ON - commanding OFF")
    } 
    else {
        Net2_Door2_Action.sendCommand(ON)
        logInfo("Net2_Rules", "Door2 was OFF - commanding ON")
    }
end

