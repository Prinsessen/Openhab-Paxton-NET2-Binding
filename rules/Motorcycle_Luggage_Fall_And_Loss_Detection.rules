rule "Beacon Sudden Loss Detection"
when
    Item Vehicle10_Beacon1_Distance changed or
    Item Vehicle10_Beacon2_Distance changed or
    Item Vehicle10_Beacon3_Distance changed
then
    val closeDistanceThreshold = 5.0 // meters - beacon must have been this close
    val lostDistanceThreshold = 10.0 // meters - beyond this is considered lost
    val timeThreshold = 120000 // 120 seconds (2 min) - BLE takes time to report loss
    
    // Only check if ignition is ON (bike is moving)
    val ignitionOn = (Vehicle10_Ignition.state == ON)
    if (!ignitionOn) {
        return // Don't alert for beacon loss when parked
    }
    
    val currentTimeLoss = new java.util.Date().time
    var String lossMessage = ""
    var Boolean lossDetected = false
    
    // Debug logging - show current and previous values
    logInfo("BagAlert", "=== SUDDEN LOSS RULE TRIGGERED ===")
    logInfo("BagAlert", "Current states - B1: {}, B2: {}, B3: {}", 
        Vehicle10_Beacon1_Distance.state, Vehicle10_Beacon2_Distance.state, Vehicle10_Beacon3_Distance.state)
    logInfo("BagAlert", "Last distances - B1: {}, B2: {}, B3: {}", 
        lastBeacon1Distance, lastBeacon2Distance, lastBeacon3Distance)
    logInfo("BagAlert", "Last seen times - B1: {}, B2: {}, B3: {}", 
        lastBeacon1Seen, lastBeacon2Seen, lastBeacon3Seen)
    logInfo("BagAlert", "Alert flags - B1: {}, B2: {}, B3: {}", 
        beacon1LossAlertActive, beacon2LossAlertActive, beacon3LossAlertActive)
    logInfo("BagAlert", "Sudden Loss Check - B1: {}m seen {}ms ago, B2: {}m seen {}ms ago, B3: {}m seen {}ms ago", 
        lastBeacon1Distance, if(lastBeacon1Seen !== null) (currentTimeLoss - lastBeacon1Seen) else "never",
        lastBeacon2Distance, if(lastBeacon2Seen !== null) (currentTimeLoss - lastBeacon2Seen) else "never",
        lastBeacon3Distance, if(lastBeacon3Seen !== null) (currentTimeLoss - lastBeacon3Seen) else "never")
    
    // Check Beacon 1 sudden loss
    if (lastBeacon1Distance !== null && lastBeacon1Distance < closeDistanceThreshold &&
        lastBeacon1Seen !== null && (currentTimeLoss - lastBeacon1Seen) < timeThreshold &&
        !beacon1LossAlertActive) {
        
        val currentDist = if (Vehicle10_Beacon1_Distance.state === NULL) null 
                         else (Vehicle10_Beacon1_Distance.state as Number).doubleValue
        
        if (currentDist === null || currentDist > lostDistanceThreshold) {
            lossMessage = lossMessage + "‚ö†Ô∏è " + Vehicle10_Beacon1_Name.state.toString + 
                " LOST CONTACT! (Was " + String.format("%.1f", lastBeacon1Distance) + 
                "m away, now out of range - possible fall at speed)\n"
            lossDetected = true
            beacon1LossAlertActive = true
            logWarn("BagAlert", "Beacon 1 sudden loss detected!")
        }
    }
    
    // Check Beacon 2 sudden loss
    if (lastBeacon2Distance !== null && lastBeacon2Distance < closeDistanceThreshold &&
        lastBeacon2Seen !== null && (currentTimeLoss - lastBeacon2Seen) < timeThreshold &&
        !beacon2LossAlertActive) {
        
        val currentDist = if (Vehicle10_Beacon2_Distance.state === NULL) null 
                         else (Vehicle10_Beacon2_Distance.state as Number).doubleValue
        
        if (currentDist === null || currentDist > lostDistanceThreshold) {
            lossMessage = lossMessage + "‚ö†Ô∏è " + Vehicle10_Beacon2_Name.state.toString + 
                " LOST CONTACT! (Was " + String.format("%.1f", lastBeacon2Distance) + 
                "m away, now out of range - possible fall at speed)\n"
            lossDetected = true
            beacon2LossAlertActive = true
            logWarn("BagAlert", "Beacon 2 sudden loss detected!")
        }
    }
    
    // Check Beacon 3 sudden loss
    logInfo("BagAlert", "Checking Beacon 3: lastDist={}, closeThreshold={}, lastSeen={}, timeThreshold={}, alertActive={}", 
        lastBeacon3Distance, closeDistanceThreshold, lastBeacon3Seen, timeThreshold, beacon3LossAlertActive)
    
    if (lastBeacon3Distance !== null && lastBeacon3Distance < closeDistanceThreshold &&
        lastBeacon3Seen !== null && (currentTimeLoss - lastBeacon3Seen) < timeThreshold &&
        !beacon3LossAlertActive) {
        
        logInfo("BagAlert", "Beacon 3 WAS close and recently seen - checking current distance")
        val currentDist = if (Vehicle10_Beacon3_Distance.state === NULL) null 
                         else (Vehicle10_Beacon3_Distance.state as Number).doubleValue
        
        logInfo("BagAlert", "Beacon 3 current distance: {} (threshold: {})", currentDist, lostDistanceThreshold)
        
        if (currentDist === null || currentDist > lostDistanceThreshold) {
            lossMessage = lossMessage + "‚ö†Ô∏è " + Vehicle10_Beacon3_Name.state.toString + 
                " LOST CONTACT! (Was " + String.format("%.1f", lastBeacon3Distance) + 
                "m away, now out of range - possible fall at speed)\n"
            lossDetected = true
            beacon3LossAlertActive = true
            logWarn("BagAlert", "Beacon 3 sudden loss detected!")
        }
    }
    
    // Update last seen tracking for connected beacons (update regardless of distance to track transitions)
    if (Vehicle10_Beacon1_Distance.state !== NULL) {
        lastBeacon1Distance = (Vehicle10_Beacon1_Distance.state as Number).doubleValue
        lastBeacon1Seen = currentTimeLoss
    }
    if (Vehicle10_Beacon2_Distance.state !== NULL) {
        lastBeacon2Distance = (Vehicle10_Beacon2_Distance.state as Number).doubleValue
        lastBeacon2Seen = currentTimeLoss
    }
    if (Vehicle10_Beacon3_Distance.state !== NULL) {
        lastBeacon3Distance = (Vehicle10_Beacon3_Distance.state as Number).doubleValue
        lastBeacon3Seen = currentTimeLoss
    }
    
    // Send alert if loss detected
    if (lossDetected) {
        logWarn("BagAlert", "üö® BEACON LOSS DETECTED:\n{}", lossMessage)
        logInfo("BagAlert", "Preparing to send email and SMS...")
        
        try {
            // Get current vehicle data
            logInfo("BagAlert", "Getting vehicle data...")
            val position = Vehicle10_Position.state.toString
            val address = if (Vehicle10_Address.state != NULL) Vehicle10_Address.state.toString else "Address not available"
            val speedState = Vehicle10_Speed.state
            val speed = if (speedState != NULL) String.format("%.1f km/h", (speedState as Number).doubleValue) else "0 km/h"
            
            // Format timestamp
            val dateFormat = new java.text.SimpleDateFormat("dd/MM HH:mm:ss")
            val timestamp = dateFormat.format(new java.util.Date())
            
            // Calculate Google Maps link
            val coords = position.split(",")
            val googleMapsLink = "https://www.google.com/maps?q=" + coords.get(0).trim + "," + coords.get(1).trim
            
            logInfo("BagAlert", "Building email body...")
            // Create HTML email body
            val emailBody = "<html><body style='font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;'>" +
                "<div style='background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%); color: white; padding: 20px; text-align: center; border-radius: 10px 10px 0 0;'>" +
                "<h1 style='margin: 0; font-size: 24px;'>‚ö†Ô∏è Springfield Beacon Loss Alert</h1>" +
                "<p style='margin: 5px 0 0 0; opacity: 0.9;'>" + timestamp + "</p>" +
                "</div>" +
                "<div style='background: #f8f9fa; padding: 20px; border-radius: 0 0 10px 10px;'>" +
                "<div style='background: white; padding: 15px; border-radius: 8px; border-left: 4px solid #ff9800; margin-bottom: 15px;'>" +
                "<h2 style='margin: 0 0 10px 0; color: #ff9800; font-size: 18px;'>üö® Beacon Lost Contact</h2>" +
                "<p style='margin: 0; white-space: pre-line; color: #333;'>" + lossMessage + "</p>" +
                "</div>" +
                "<div style='background: white; padding: 15px; border-radius: 8px; border-left: 4px solid #1976d2; margin-bottom: 15px;'>" +
                "<h3 style='margin: 0 0 10px 0; color: #1976d2; font-size: 16px;'>üìç Location</h3>" +
                "<p style='margin: 5px 0;'>" + address + "</p>" +
                "<p style='margin: 5px 0; color: #666; font-size: 13px;'>" + coords.get(0).trim + ", " + coords.get(1).trim + "</p>" +
                "<p style='margin-top: 10px;'><a href='" + googleMapsLink + "' style='color: #1976d2; text-decoration: none; font-weight: bold;'>üìç Open in Google Maps</a></p>" +
                "</div>" +
                "<table style='width: 100%; border-collapse: collapse; margin-top: 10px;'>" +
                "<tr><td style='padding: 10px; background: #e3f2fd;'><strong>‚ö° Speed:</strong> " + speed + "</td></tr>" +
                "<tr><td style='padding: 10px; background: #e8f5e9;'><strong>üèçÔ∏è Ignition:</strong> ON</td></tr>" +
                "<tr><td style='padding: 10px; text-align: center; color: #999; font-size: 12px;'>Beacon was close (<5m) and suddenly lost contact - possible fall at speed</td></tr>" +
                "</table>" +
                "</div>" +
                "</body></html>"
            
            logInfo("BagAlert", "Getting mail actions...")
            val mailActions = getActions("mail", "mail:smtp:samplesmtp")
            if (mailActions !== null) {
                logInfo("BagAlert", "Mail actions OK, sending email...")
                val success1 = mailActions.sendHtmlMail("nanna@agesen.dk", "üö® Springfield Beacon Loss Alert", emailBody)
                logInfo("BagAlert", "Beacon loss email status: " + success1)
                
                logInfo("BagAlert", "Sending SMS...")
                val success2 = mailActions.sendMail("20960210@sms.uni-tel.dk", "Springfield Beacon Loss", "BEACON LOST CONTACT at " + timestamp + ". " + address + ". Google Maps: " + googleMapsLink)
                logInfo("BagAlert", "Beacon loss SMS status: " + success2)
            } else {
                logError("BagAlert", "Mail actions not available, cannot send alert!")
            }
            
        } catch (Exception e) {
            logError("BagAlert", "Error sending beacon loss notification: " + e.getMessage())
        }
    } else {
        logInfo("BagAlert", "No beacon loss detected in this update")
    }
end
