	executeCommandLine(Duration.ofSeconds(60), "/etc/openhab/scripts/sonos_doorbell_tts.sh", "192.168.100.171", "Advarsel: Nilan Ventilation fejl. Systemet er offline, genstart gateway p√• 10.0.5.101")
	Thread::sleep(1000)
	executeCommandLine(Duration.ofSeconds(60), "/etc/openhab/scripts/sonos_doorbell_tts.sh", "192.168.100.174", "Advarsel: Nilan Ventilation fejl. Systemet er offline, genstart gateway p√• 10.0.5.101")
	Thread::sleep(1000)
	executeCommandLine(Duration.ofSeconds(60), "/etc/openhab/scripts/sonos_doorbell_tts.sh", "192.168.100.177", "Advarsel: Nilan Ventilation fejl. Systemet er offline, genstart gateway p√• 10.0.5.101")
	Thread::sleep(1000)
	executeCommandLine(Duration.ofSeconds(60), "/etc/openhab/scripts/sonos_doorbell_tts.sh", "10.0.1.100", "Advarsel: Nilan Ventilation fejl. Systemet er offline, genstart gateway p√• 10.0.5.101")
