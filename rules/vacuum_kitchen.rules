rule "Start Roborock Kitchen Cleaning (ID 6) "
when
    Item Kitchen_Clean_Switch received command ON
then
    logInfo("VacuumRule", "Sending command to clean Kitchen (Room ID 6).")

    // Try commands channel with segment clean
    actions_command.sendCommand("app_segment_clean [6]")
    logInfo("VacuumRule", "Command sent via actions_command: app_segment_clean [6]")
end